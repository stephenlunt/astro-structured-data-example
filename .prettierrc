{
    "singleQuote": true,
    "bracketSpacing": true,
    "endOfLine": "lf",
    "semi": true,
    "tabWidth": 4,
    "trailingComma": "es5",
    "printWidth": 80,
    "plugins": ["prettier-plugin-astro"],
    "overrides": [
        {
            "files": "*.astro",
            "options": {
                "parser": "astro"
            }
        },
        {
            "files": [".*", "*.json", "*.md"],
            "options": {
                "useTabs": false
            }
        }
    ]
}
